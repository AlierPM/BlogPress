<div class="container d-flex align-items-center">
  <div class="col-lg-6 mx-lg-auto">
    <div class="card shadow">
      <div class="card-header">
        <h2 class="card-title text-center">Sign In</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: "visually-hidden" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Username", class: "form-control form-control-lg" %>
          </div>

          <div class="form-group mt-4">
            <%= f.label :password, class: "visually-hidden" %>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control form-control-lg" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group mb-2 mt-2">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.submit "Sign in", class: "btn btn-primary mb-2 mt-2" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
