<%= form_with(model: @post, url: new_user_post_path, method: :post) do |form| %>
 
    <%= form.label :title, class: 'sr-only' %>
    <%= form.text_field :title, placeholder: "Enter post title", class: 'form-control' %>
 
    <%= form.label :text, class: 'sr-only' %>
    <%= form.text_area :text, placeholder: "Write your post here......!", class: 'form-control' %>
 
    <%= form.submit 'Create Post', class: 'mt-8 btn btn-primary' %>

<% end %>
